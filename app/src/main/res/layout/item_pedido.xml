<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/background_secondary"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/servicio_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limpieza de GYM"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cliente_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Cliente: Sofía Ramírez"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/pedido_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Fecha: 15 de Diciembre, 2025"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/pedido_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Horario: 10:00 AM - 13:00 PM"
                android:textColor="@color/text_secondary" />

            <Button
                android:id="@+id/ver_detalles_button"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/button_primary_background"
                android:paddingHorizontal="16dp"
                android:text="Ver Detalles"
                android:textAllCaps="false"
                android:textColor="@color/accent" />
        </LinearLayout>

        <ImageView
            android:id="@+id/pedido_imagen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic" />
    </LinearLayout>
</androidx.cardview.widget.CardView>